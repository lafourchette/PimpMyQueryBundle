<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="yorenard_pimp_my_query">YoRenard\PimpMyQueryBundle\</parameter>

        <!--entities-->
        <parameter key="yorenard_pimp_my_query.entity">%yorenard_pimp_my_query%Entity\</parameter>
        <parameter key="yorenard_pimp_my_query.entity.pmq_favorite_query.class">%yorenard_pimp_my_query.entity%PMQFavoriteQuery</parameter>
        <parameter key="yorenard_pimp_my_query.entity.pmq_param.class">%yorenard_pimp_my_query.entity%PMQParam</parameter>
        <parameter key="yorenard_pimp_my_query.entity.pmq_query.class">%yorenard_pimp_my_query.entity%PMQQuery</parameter>
        <parameter key="yorenard_pimp_my_query.entity.pmq_right.class">%yorenard_pimp_my_query.entity%PMQRight</parameter>
        <parameter key="yorenard_pimp_my_query.entity.pmq_run_queue.class">%yorenard_pimp_my_query.entity%PMQRunQueue</parameter>
        <parameter key="yorenard_pimp_my_query.entity.pmq_run_queue_param.class">%yorenard_pimp_my_query.entity%PMQRunQueueParam</parameter>

        <!--managers-->
        <parameter key="yorenard_pimp_my_query.manager">%yorenard_pimp_my_query%Manager\</parameter>
        <parameter key="yorenard_pimp_my_query.manager.pmq_favorite_query.class">%yorenard_pimp_my_query.manager%PMQFavoriteQueryManager</parameter>
        <parameter key="yorenard_pimp_my_query.manager.pmq_param.class">%yorenard_pimp_my_query.manager%PMQParamManager</parameter>
        <parameter key="yorenard_pimp_my_query.manager.pmq_query.class">%yorenard_pimp_my_query.manager%PMQQueryManager</parameter>
        <parameter key="yorenard_pimp_my_query.manager.pmq_right.class">%yorenard_pimp_my_query.manager%PMQRightManager</parameter>
        <parameter key="yorenard_pimp_my_query.manager.pmq_run_queue.class">%yorenard_pimp_my_query.manager%PMQRunQueueManager</parameter>
        <parameter key="yorenard_pimp_my_query.manager.pmq_run_queue_param.class">%yorenard_pimp_my_query.manager%PMQRunQueueParamManager</parameter>
    </parameters>

    <services>
        <service id="yorenard_pimp_my_query.manager.pmq_query" class="%yorenard_pimp_my_query.manager.pmq_query.class%">
            <argument type="service" id="doctrine.orm.default_entity_manager" />
            <argument>%yorenard_pimp_my_query.entity.pmq_query.class%</argument>
            <argument type="service" id="doctrine" />
        </service>
        <service id="yorenard_pimp_my_query.manager.pmq_favorite_query" class="%yorenard_pimp_my_query.manager.pmq_favorite_query.class%">
            <argument type="service" id="doctrine.orm.default_entity_manager" />
            <argument>%yorenard_pimp_my_query.entity.pmq_favorite_query.class%</argument>
        </service>
        <service id="yorenard_pimp_my_query.manager.pmq_param" class="%yorenard_pimp_my_query.manager.pmq_param.class%">
            <argument type="service" id="doctrine.orm.default_entity_manager" />
            <argument>%yorenard_pimp_my_query.entity.pmq_param.class%</argument>
        </service>
        <service id="yorenard_pimp_my_query.manager.pmq_right" class="%yorenard_pimp_my_query.manager.pmq_right.class%">
            <argument type="service" id="doctrine.orm.default_entity_manager" />
            <argument>%yorenard_pimp_my_query.entity.pmq_right.class%</argument>
        </service>
        <service id="yorenard_pimp_my_query.manager.pmq_run_queue" class="%yorenard_pimp_my_query.manager.pmq_run_queue.class%">
            <argument type="service" id="doctrine.orm.default_entity_manager" />
            <argument>%yorenard_pimp_my_query.entity.pmq_run_queue.class%</argument>
            <argument type="service" id="doctrine" />
        </service>
        <service id="yorenard_pimp_my_query.manager.pmq_run_queue_param" class="%yorenard_pimp_my_query.manager.pmq_run_queue_param.class%">
            <argument type="service" id="doctrine.orm.default_entity_manager" />
            <argument>%yorenard_pimp_my_query.entity.pmq_run_queue_param.class%</argument>
        </service>
    </services>
</container>