<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="yorenard_pimp_my_query.behavior.get_paginated_query_list.class">YoRenard\PimpMyQueryBundle\Behavior\GetPaginatedQueryListBehavior</parameter>
        <parameter key="yorenard_pimp_my_query.behavior.update_query.class">YoRenard\PimpMyQueryBundle\Behavior\UpdateQueryBehavior</parameter>
    </parameters>

    <services>
        <service id="yorenard_pimp_my_query.behavior.get_paginated_query_list" class="%yorenard_pimp_my_query.behavior.get_paginated_query_list.class%">
            <argument type="service" id="yorenard_pimp_my_query.manager.pmq_query" />
            <argument type="service" id="yorenard_pimp_my_query.paginator.custom" />
        </service>
        <service id="yorenard_pimp_my_query.behavior.update_query" class="%yorenard_pimp_my_query.behavior.update_query.class%">
            <argument type="service" id="yorenard_pimp_my_query.manager.pmq_query" />
        </service>
    </services>
</container>